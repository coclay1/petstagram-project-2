<div class="container">

  <h1 style="font-size: 36px; font-weight: bold;">Create a New Post</h1>
  <form id="add-post-form">
    <div class="form-group">
      <label for="title">Title</label>
      <br>
      <input type="text" id="title" class="form-control" placeholder="Enter the title" required>
    </div>
    <br>
    <div class="form-group">
      <label for="body">Content</label>
      <br>
      <textarea id="body" class="form-control" rows="5" placeholder="Enter your post body" required></textarea>
    </div>
    <div class="form-group">

    </div>
    <button id="upload_widget" class="cloudinary-button">Upload files</button>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>

</div>
<br>

<script src="https://upload-widget.cloudinary.com/global/all.js" type="text/javascript"></script>
<script src="/JS/add-post.js"></script>